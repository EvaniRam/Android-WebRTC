<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
<LinearLayout

              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              >

    <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="156dp">

        <ImageView
                android:src="@drawable/user_icon"
                android:gravity="center"
                android:padding="5dip"
                android:layout_weight="10"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"

                />



        <TextView

                android:id="@+id/TextViewUserIDUserName" android:text="ID:  5\nUsername: Android"

                android:layout_weight="10"

                android:layout_gravity="center_vertical"

                android:textColor="#ffffffff"

                android:padding="5dip" android:gravity="center|left"
                style="@android:style/TextAppearance.Holo.Widget"
                android:textStyle="bold"/>








    </GridLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Online Peers"
            android:id="@+id/textViewOnlinePeers"
            android:layout_gravity="center_horizontal|left"
            android:textColor="#ce9f0c"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_marginLeft="0dp"/>



    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:id="@+id/TableLayoutOnlinePeers"
            style="@android:style/Animation.Activity">

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/screen_background_light">

            <TextView

                    android:id="@+id/TableLayoutItemUser" android:text="USER"

                    android:layout_weight="5"

                    android:textColor="#e92fce18"

                    android:padding="20dip" android:gravity="center"

                    style="@android:style/TextAppearance.Holo.Widget"
                    android:textStyle="bold"/>

            <TextView

                    android:id="@+id/TableLayoutItemUser" android:text="ID"

                    android:layout_weight="5"

                    android:textColor="#e92fce18"

                    android:padding="20dip" android:gravity="center"
                    style="@android:style/TextAppearance.Holo.Widget"
                    android:textStyle="bold"/>


            <TextView

                    android:id="@+id/TableLayoutItemUser" android:text="NAME"

                    android:layout_weight="5"

                    android:textColor="#e92fce18"

                    android:padding="20dip" android:gravity="center"
                    style="@android:style/TextAppearance.Holo.Widget"
                    android:textStyle="bold"/>

            <TextView

                    android:id="@+id/TableLayoutItemPlatform" android:text="PLATFORM"

                    android:layout_weight="5"

                    android:textColor="#e92fce18"

                    android:padding="20dip" android:gravity="center"
                    style="@android:style/TextAppearance.Holo.Widget"
                    android:textStyle="bold"/>

            <TextView

                    android:id="@+id/TableLayoutItemStatus" android:text="STATUS"

                    android:layout_weight="5"

                    android:textColor="#e92fce18"

                    android:padding="20dip" android:gravity="center"
                    style="@android:style/TextAppearance.Holo.Widget"
                    android:textStyle="bold"/>

            <TextView

                    android:id="@+id/TableLayoutItemUDPEnabled" android:text="UDP"

                    android:layout_weight="5"

                    android:textColor="#e92fce18"

                    android:padding="20dip" android:gravity="center"
                    style="@android:style/TextAppearance.Holo.Widget"
                    android:textStyle="bold"
                    android:layout_column="6"/>


        </TableRow>










    </TableLayout>

</LinearLayout>
</ScrollView>
